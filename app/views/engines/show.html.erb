<div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-4">
        <div id="form-show">
          <%= simple_form_for :search, url: engines_path, method: :get,
            html: { class: 'form-inline' } do |f| %>
            <%= f.input :address, label: false, placeholder: "Where" %>
            <%= f.input :datetime, label: false, placeholder: "When" %>
            <%= f.submit 'Get it', class: "btn btn-success btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
</div>

<div class="engine-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @engine.category.photo.path, height: 300, width: 400, crop: :fill %>')">
</div>

<div class="container-fluid text-center">
  <div class="row">
    <div class="col-md-6">
      <div class="engine-content">
        <div id="engine-title-category">
          <h1><%= @engine.name %></h1>
          </h3><%= @engine.category.name %></h3>
        </div>
        <div id="engine-description">
          <p> <%= @engine.description %> </p>
          <strong> <%= @engine.price %> â‚¬/per day </strong>
        </div>
        <div class="form-quantity">
          <input class="form-control text-center form-number" id="engine-quantity" type="number" min="0" max="20">
        </div>
        <div>
          <%= simple_form_for [@engine, @booking] do |f| %>
            <%= f.button :submit, "Book Now", class: "btn btn-success btn-lg margin-button"%>
          <% end %>
          <%= link_to "Back", engines_path, class: "btn btn-success btn-lg margin-button" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <%= image_tag_map_for(@engine, { size: "650x550", pin_color: "0x11BFAE", :crop => :fill }) %>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="reviews">
    <div class="reviews-title">
      <h2>Reviews</h2>
    </div>
    <div class="user-avatar avatar">
      <%= image_tag "avatar.jpg", :class => "avatar-large" %>
    </div>
